# DataCo ETL Pipeline Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=fastroute_user
DB_PASSWORD=fastroute_password
DB_NAME=fasteroute

# Pipeline Settings
BATCH_SIZE=1000
MAX_RETRIES=3
TIMEOUT_SECONDS=300
ENABLE_VALIDATION=true
CREATE_BACKUP=true

# File Paths
CSV_FILE=DataCoSupplyChainDataset.csv
OUTPUT_SQL_FILE=dataco_import.sql
LOG_FILE=data_pipeline.log

# Security Settings (Optional)
# ENCRYPTION_KEY=your-32-byte-encryption-key-here
# AUDIT_LOG_PATH=/var/log/dataco/audit.log

# Performance Settings
MAX_WORKERS=4
MEMORY_LIMIT_MB=2048
ENABLE_PARALLEL_PROCESSING=false

# Deployment Settings
DRY_RUN=false
BACKUP_BEFORE_IMPORT=true
VERIFY_AFTER_IMPORT=true








